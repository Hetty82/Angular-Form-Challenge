{
    "extends": ["stylelint-config-standard", "stylelint-config-sass-guidelines"],
    "plugins": ["stylelint-order"],
    "rules": {
        "indentation": 4,
        "max-nesting-depth": [
            1,
            {
                "ignore": ["pseudo-classes"]
            }
        ],
        "color-named": null
    }
}
